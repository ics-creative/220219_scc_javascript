{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true, /* anyを報告する。 */
    "noUnusedLocals": true, /* 未使用のローカル変数を報告 */
    "noImplicitReturns": true, /* 関数内のすべてのコードパスが値を返さない場合、エラーを報告する。 */
    "noFallthroughCasesInSwitch": true, /* switchステートメントで通らないケースのエラーを報告する。 */
    "noUnusedParameters": true,  /* 未使用のパラメータに関するエラーを報告する。 */
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
